<div class="min-h-screen bg-gray-100 p-8">
  <div class="max-w-3xl mx-auto bg-white shadow rounded-xl p-6 space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800">Edit Availability Slot</h1>
      <%= link_to "Back", root_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>

    <%= render 'form', slot: @slot %>

    <div class="mt-4 pt-4 border-t border-gray-200">
      <%= button_to "Delete Slot", @slot, method: :delete, 
          class: "text-red-600 hover:text-red-800 bg-white",
          form: { data: { turbo_confirm: "Are you sure you want to delete this slot?" } } %>
    </div>
  </div>
</div>
